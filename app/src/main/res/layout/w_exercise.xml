<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/exerciseMainLayout"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LAYOUT_HANDLE"
        android:background="@drawable/circuit"
        android:orientation="horizontal"
        android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/exercise_data_layout"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/workspaceExerciseNameView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exercise"
                        style="@style/MyTextViewStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/dynamicViewLayout">
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/drag_icon"
                    android:background="@drawable/drag"/>
            </LinearLayout>

    </LinearLayout>

</LinearLayout>

