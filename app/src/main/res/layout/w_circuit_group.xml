<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/paddingViewLayout">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/groupHandle"
        android:background="@drawable/circuit"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/ic_collapse_arrow_50"
            android:id="@+id/Arrow"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/circuitNameHeader"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="10"
            android:paddingLeft="10dp"
            style="@style/MyTextViewStyle"
            android:textSize="20sp"
            android:textColor="#1ca4fb"
            android:text="TESTVAL" />

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/drag_icon"
            android:background="@drawable/drag"/>


    </LinearLayout>

</LinearLayout>