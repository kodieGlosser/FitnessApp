<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@android:color/transparent">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            style="@style/myButton"
            android:padding="10dp"
            android:src="@drawable/ic_delete_50"/>

    </LinearLayout>


    <com.main.toledo.gymtrackr.SwipableLinearLayout
        android:id="@+id/swipeLayoutHandle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Plan Name"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:background="#F0F0F0"
        style="@style/myCircuit"
        android:padding="0dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_weight="0.9">

            <TextView
                android:id="@+id/browseMenuExerciseNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:padding="4dp"
                style="@style/MyTextViewStyleBrowseExerciseName"
                android:text="Exercise"/>
            <TextView
                android:id="@+id/browseMenuExerciseMuscleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_below="@+id/browseMenuExerciseNameView"
                android:text="ExerciseMuscle"
                />
            <TextView
                android:id="@+id/browseMenuExerciseEquip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="ExerciseEquip"
                android:layout_below="@+id/browseMenuExerciseMuscleView"
                android:layout_alignLeft="@+id/browseMenuExerciseMuscleView"
                android:layout_alignStart="@+id/browseMenuExerciseMuscleView" />
        </RelativeLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:src="@drawable/ic_ic_expand_arrow_side_50"
            android:id="@+id/Arrow_in_plan"
            android:layout_weight="0.1"
            />

    </com.main.toledo.gymtrackr.SwipableLinearLayout>



</FrameLayout>

